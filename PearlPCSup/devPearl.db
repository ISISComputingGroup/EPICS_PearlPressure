record(calcout, "$(P)$(IOC_NAME)INCREASING_PRESSURE_CHECK") {
    field(DESC, "description")
    field(CALC, "A > 0 ? 1 : 0")
    field(INPA, "$(P)$(IOC_NAME)PRESSURE_COMPARISON")
    field(FLNK, "$(P)$(IOC_NAME)INCREASING_PRESSURE")
}

