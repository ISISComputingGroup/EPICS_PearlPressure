}

record(calcout, "$(P)$(IOC_NAME)RESET_STATUS") {
    field(DESC, "Check if resetting is complete")
    field(CALC, "(A = 1) ? 1 : 0")
    field(INPA, "$(P)$(IOC_NAME)RESET")
}

record(calcout, "$(P)$(IOC_NAME)READY_STATE_CHECKS") {
    field(DESC, "Ready state check validation")
    field(SCAN, "Passive")
    field(VAL, "0")
    field(CALC, "(!A && !B && !C && !D && !E && !F)? 1:0")
    field(INPA, "$(P)$(IOC_NAME)RESET CP") # Not restarting must be 0
    field(INPB, "$(P)$(IOC_NAME)SF CP") # Not in Seal fail must be 0/RVAl OFF
    field(INPC, "$(P)$(IOC_NAME)ERRCODE CP") # General error must be 0
    field(INPE, "$(P)$(IOC_NAME)INCREASING_PRESSURE CP") # Must be 0 - no increase
    field(INPF, "$(P)$(IOC_NAME)DECREASING_PRESSURE CP") # Must be 0 - no decrease
    field(FLNK, "$(P)$(IOC_NAME)READY_STATE")
    field(SDIS, "$(P)$(IOC_NAME)DISABLE")
}

record(bi, "$(P)$(IOC_NAME)READY_STATE") {
